.container
	width 100%
	max-width max-width-container
	padding 0 15px
	margin 0 auto
	display flex
	flex-direction column
	text-align center

.content
	position relative
	padding 30px 0 20px 0
	overflow hidden
	width 100%
	// max-width 1920px
	margin 0 auto

.bread-crumbs
	display flex
	margin-bottom 30px
	padding-left 15px

.bread-crumbs__item
	margin-right 15px
	&:last-child
		margin-right 0
		.bread-crumbs__link
			&:before
				display none

.bread-crumbs__link
	display block
	position relative
	font-size smallText
	font-family mainTextFont
	color lightBlue
	&:before
		content ''
		position absolute
		top 0px
		right -7px
		width 2px
		height 100%
		transform rotate(15deg)
		background-color lightBlue
		
.product-list
	display flex
	flex-wrap wrap
	justify-content flex-start
	
.product-item
	position relative
	display flex
	flex-direction column
	align-items center
	padding 15px
	padding-bottom 40px
	max-width 25%

.product-item__img
	width 100%
	margin-bottom 20px
	
.product-item__picture
	width 100%
	
.product-item__title
	font-size 16px
	font-family mainTextFont
	color blue
	border-bottom 2px solid blue
	margin-bottom 10px
	
.product-item__description
	width 100%
	text-align center
	font-size smallText
	font-family lightTextFont
	color lightGray
	margin-bottom 20px
	min-height 27px

.product-item__price
	display flex
	justify-content center
	align-items flex-end
	margin-bottom 10px
	
.product-item__cost
	font-size bigText
	font-family mainTextFont
	color blue
	margin-right 5px

.product-item__currency
	font-size bigText
	font-family lightTextFont
	color blue
	margin-right 20px
	
.product-item__serch
	cursor pointer
	width 100%
	max-width 18px
	margin-right 15px

.product-item__serch-icon
	width auto
	max-width 100%
	
.product-item__like
	cursor pointer
	width 100%
	max-width 18px

.product-item__like-icon
	width auto
	max-width 100%

.product-item__order
	cursor pointer
	position relative
	width 100%
	max-width 150px
	text-align center
	padding 15px
	padding-left 37px
	font-size mediumText
	font-family mainTextFont
	color white
	background-color orange
	border-radius 30px
	&:before
		content ''
		position absolute
		top 50%
		left 0
		transform translate(100%,-50%)
		width 23px
		height 21px
		background-image url('../img/general/newyear/basket.png')