.content.newyear
	position relative
	padding 30px 0 20px 0
	overflow hidden
	width 100%
	max-width 1920px
	margin 0 auto
	&:after
		content ''
		position absolute
		bottom 0px
		left 0px
		width 1920px
		height 1357px
		background-image url('../img/general/newyear/newyear-bg.png')
		z-index -1	
	.container
		display flex
		flex-direction column
		padding 0

.content__bread-crumbs
	display flex
	margin-bottom 30px
	margin-left 15px

.content__bread-crumbs--item
	margin-right 15px
	&:last-child
		margin-right 0
		a
			&:before
				display none
	a
		display block
		position relative
		font-size 14px
		font-family CenturyGothicBold, sans-serif
		color #70caf0
		&:before
			content ''
			position absolute
			top 0px
			right -7px
			width 2px
			height 100%
			transform rotate(15deg)
			background-color #70caf0

.newyear__list
	display flex
	flex-wrap wrap
	justify-content center
	
.newyear__list__item
	position relative
	display flex
	flex-direction column
	align-items center
	margin 15px
	margin-bottom 40px
	max-width 270px
