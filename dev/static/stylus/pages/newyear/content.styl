.newyear__list__item--img
	width 100%
	margin-bottom 20px
	
.newyear__list__item--link
	font-size 16px
	font-family CenturyGothicBold, sans-serif
	color #7091f0
	border-bottom 2px solid #7091f0
	margin-bottom 10px
	
.newyear__list__item--descr
	width 100%
	text-align center
	font-size 14px
	font-family CenturyGothicRegular, sans-serif
	color #b3b3b3
	margin-bottom 20px

.newyear__list__item__price
	display flex
	justify-content center
	align-items flex-end
	margin-bottom 10px
	
.newyear__list__item__price--cost
	font-size 24px
	font-family CenturyGothicBold, sans-serif
	color #7091f0
	margin-right 5px

.newyear__list__item__price--currency
	font-size 24px
	font-family CenturyGothicRegular
	color #7091f0
	margin-right 20px
	
.newyear__list__item__price--serch
	cursor pointer
	width 100%
	max-width 18px
	margin-right 15px
	img
		width auto
		max-width 100%
	
.newyear__list__item__price--like
	cursor pointer
	width 100%
	max-width 18px
	img
		width auto
		max-width 100%

.newyear__list__item--order
	cursor pointer
	position relative
	width 100%
	max-width 150px
	text-align center
	padding 15px
	padding-left 37px
	font-size 16px
	font-family CenturyGothicBold,sans-serif
	color #fff
	background-color #ff6c00
	border-radius 30px
	&:before
		content ''
		position absolute
		top 50%
		left 0
		transform translate(100%,-50%)
		width 23px
		height 21px
		background-image url('../img/general/newyear/basket.png')
		

	
