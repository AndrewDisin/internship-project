.content_blog
	&:after
		content ''
		position absolute
		bottom 0px
		left 0px
		width 1920px
		height 1620px
		background-image url('../img/general/blog/blog-bg.png')
		background-position center center
		z-index -1	
	.container
		display flex
		flex-direction column

.bread-crumbs__link_violet-text
	color violet

.heart-blog
	position relative
	&:after
		content ''
		position absolute
		right -18px
		top 50%
		transform translateY(-50%)
		width 13px
		height 13px
		background-image url('../img/general/heart-blog.png')

.greeting
	width 100%
	display flex
	align-items center
	margin-bottom 10px

.greeting__text
	width 100%
	max-width 1050px
	padding 50px 80px 45px
	border 2px solid lightPink
	border-radius 5px
	font-size mediumText
	font-family mainTextFont
	color blue
	text-align left

.greeting__photo
	margin-left -70px
	width 100%
	max-width 191px
	border-radius 50%

.greeting__img
	width auto
	max-width 100%

.social-contacts
	display flex
	flex-wrap wrap
	margin-right 40px
	margin-bottom 55px

.social-contacts__link
	font-size largeText
	font-family mainTextFont
	width 50%
	margin-bottom 20px

.social-contacts__link
	color lightBlue
	.underline
		border-bottom 2px solid lightBlue

