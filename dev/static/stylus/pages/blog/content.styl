.content.blog
	position relative
	padding 30px 0 20px 0
	overflow hidden
	width 100%
	max-width 1920px
	margin 0 auto
	&:after
		content ''
		position absolute
		bottom 0px
		left 0px
		width 1920px
		height 1620px
		background-image url('../img/general/blog/blog-bg.png')
		background-position center center
		z-index -1	
	.container
		display flex
		flex-direction column
		align-items center

.content__bread-crumbs
	display flex
	margin-bottom 30px
	margin-left 15px
	width 100%
	text-align left

.content__bread-crumbs--item
	margin-right 15px
	&:last-child
		margin-right 0
		a
			&:before
				display none
	a
		display block
		position relative
		font-size 14px
		font-family CenturyGothicBold, sans-serif
		color #70caf0
		&:before
			content ''
			position absolute
			top 0px
			right -7px
			width 2px
			height 100%
			transform rotate(15deg)
			background-color #70caf0

	
.content__bread-crumbs--item.violet-text
	a
		color #dbc4e1

.blog__greeting
	width 100%
	display flex
	align-items center
	margin-bottom 10px
	
.blog__greeting--text
	width 100%
	max-width 1050px
	padding 50px 80px 45px
	border 2px solid #f893bb
	border-radius 5px
	font-size 16px
	font-family CenturyGothicBold, sans-serif
	color #7091f0

.blog__greeting--photo
	margin-left -70px
	width 100%
	max-width 191px
	border-radius 50%
	img
		width auto
		max-width 100%
		
.social-contacts
	display flex
	flex-wrap wrap
	margin-right 40px
	margin-bottom 55px

.social-contacts--item
	font-size 18px
	font-family CenturyGothicBold, sans-serif
	width 50%
	margin-bottom 20px

.social-contacts--email
	color #7fddef
	.underline
		border-bottom 2px solid #7fddef

.social-contacts--tweeter
	color #a6d63f
	.underline
		border-bottom 2px solid #a6d63f
	
.social-contacts--facebook
	color #ff6c00
	.underline
		border-bottom 2px solid #ff6c00
	
.social-contacts--googleplus
	color #ff579a
	.underline
		border-bottom 2px solid #ff579a

.post-img
	width 100%
	max-width 1170px
	img
		width auto
		max-width 100%

.blog__post
	margin-bottom 60px
	display flex
	flex-direction column
	
.blog__post--title
	width 100%
	font-size 24px
	font-family CenturyGothicBold, sans-serif
	color #7091f0
	margin-bottom 20px
	
.blog__post__info
	display flex
	margin-bottom 30px
	
.blog__post__date
	font-size 14px
	font-family CenturyGothicBold,sans-serif
	color #a5a5a5
	margin-right 60px
	
.blog__post__coments
	position relative
	font-size 14px
	font-family CenturyGothicBold,sans-serif
	color #dbc4e1
	&:before
		content ''
		position absolute
		right -9px
		bottom -3px
		transform translateX(100%)
		width 24px
		height 23px
		background-image url('../img/general/blog/comments.png')
		
.post-text
	font-size 16px
	font-family CenturyGothicBold, sans-serif
	color #a5a5a5
	line-height 1.2
	p
		margin-bottom 10px
		
.post-img
	margin-top 20px
	margin-bottom 30px
	
.blog__comments
	width 100%
	display flex
	flex-direction column
	
.blog__comments--title
	font-size 20px
	font-family CenturyGothicBold, sans-serif
	color #7091f0
	margin-bottom 5px

.blog__comments__list
	width 100%
	display flex
	flex-direction column
	
.blog__comments__list--item
	padding 55px 40px 35px 0
	border-top 1px solid #ffda39

.comment--date
	font-size 14px
	font-family CenturyGothicRegular, sans-serif
	color #646464
	margin-bottom 15px
	
.comment--text
	width 100%
	font-size 14px
	font-family CenturyGothicRegular, sans-serif
	color #646464
	margin-bottom 25px

.comment__options
	display flex
	justify-content flex-end
	a
		display block
		margin-right 50px
		font-size 16px
		font-family CenturyGothicBold, sans-serif
		color #646464
		border-bottom 2px solid #646464
		&:last-child
			margin-right 0
			
.blog__newcomment
	width 100%
	display flex
	flex-direction column
	padding 18px 55px 18px 20px
	border-top 8px solid #feeab7
	background-color rgba(254, 247,235,.49)
	
.blog__newcomment--title
	font-size 18px
	font-family CenturyGothicRegular, sans-serif
	color #646464
	margin-bottom 15px
	
.blog__newcomment__form
	width 100%
	display flex
	flex-direction column
	label
		width 100%
		font-size 14px
		font-family CenturyGothicRegular, sans-serif
		color #646464
		display flex
		align-items flex-start
		margin-bottom 20px
		input
			width 100%
			max-width 900px
			border 1px solid #fbeaa0
			padding 5px
			font-size 14px
			font-family CenturyGothicRegular, sans-serif
			color #646464
			margin-left 120px
		textarea
			width 100%
			max-width 900px
			min-height 110px
			border 1px solid #fbeaa0
			padding 5px
			font-size 14px
			font-family CenturyGothicRegular, sans-serif
			color #646464
			margin-left 80px
	.new-comment-submit
		background-color #ff6c00
		color #fff
		width 100%
		max-width 180px
		padding 15px
		border none
		border-radius 30px
		margin-left 185px
		cursor pointer

.bold-blog
	font-size 16px
	position relative
	line-height 12px
	bottom -1px			

.heart-blog
	position relative
	&:after
		content ''
		position absolute
		right -18px
		top 50%
		transform translateY(-50%)
		width 13px
		height 13px
		background-image url('../img/general/heart-blog.png')