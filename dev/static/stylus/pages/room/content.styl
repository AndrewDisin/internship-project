.content.room
	position relative
	padding 30px 0 20px 0
	overflow hidden
	width 100%
	max-width 1920px
	margin 0 auto
	&:after
		content ''
		position absolute
		top 100px
		left 100px
		width 292px
		height 204px
		background-image url('../img/general/packaging/sheep-bg.png')
		z-index -1
	&:before
		content ''
		position absolute
		bottom 0px
		right 0px
		width 695px
		height 379px
		background-image url('../img/general/packaging/girl.png')
		z-index -1	
	.container
		display flex
		flex-direction column
		padding 0

.content__bread-crumbs
	display flex
	margin-bottom 30px
	margin-left 15px

.content__bread-crumbs--item
	margin-right 15px
	&:last-child
		margin-right 0
		a
			&:before
				display none
	a
		display block
		position relative
		font-size 14px
		font-family CenturyGothicBold, sans-serif
		color #70caf0
		&:before
			content ''
			position absolute
			top 0px
			right -7px
			width 2px
			height 100%
			transform rotate(15deg)
			background-color #70caf0

.room__list
	display flex
	flex-wrap wrap
	justify-content center
	
.room__list__item
	position relative
	display flex
	flex-direction column
	align-items center
	margin 15px
	margin-bottom 40px
	max-width 300px
	&:hover
		.room__list__item--img
			position relative
			&:before
				content 'Перейти в каталог'
				position absolute
				display flex
				justify-content center
				align-items center
				color #fff
				font-size 18px
				font-family CenturyGothicBold
				top 0px
				left 0px
				width 100%
				height 100%
				background-color rgba(35,34,32,0.5)
				border 2px solid #7091f0
				-webkit-box-shadow 0px 5px 24px 0px rgba(35,34,32,1)
				-moz-box-shadow 0px 5px 24px 0px rgba(35,34,32,1)
				box-shadow 0px 5px 24px 0px rgba(35,34,32,1)

.room__list__item--img
	width 100%
	margin-bottom 20px
	img
		width auto
		max-width 100%
	
.room__list__item--link
	font-size 16px
	font-family CenturyGothicBold, sans-serif
	color #7091f0
	border-bottom 2px solid #7091f0
	
.content__bread-crumbs--item.pink-text
	a
		color #f893bb