.content_delivery
	&:after
		content ''
		position absolute
		bottom 0
		left 0
		width 1920px
		height 1141px
		background-image url('../img/general/delivery/delivery-bg.png')
		background-position bottom center
		z-index -1	
	.container
		display flex
		flex-direction column
			
.bread-crumbs__link_lilac-text
	color lilac
		
.after-registration	
	padding 20px 20px 30px
	background-color white
	display flex
	flex-direction column
	align-items center
	
.after-registration__title, .delivery-methods__title, .payment-methods__title
	font-size hugeText
	font-family mainTextFont
	color blue
	margin-bottom 25px

.after-registration__list
	display flex
	flex-direction column
	text-align left
	
.after-registration__item
	font-size mediumText
	font-family mainTextFont
	color lightGray
	margin-bottom 15px
	line-height 1.2
	&:last-child
		margin-bottom 0
	
.after-registration__count
	font-size largeText
	color lilac
	
.delivery-methods
	padding 30px 0 45px 0
	display flex
	flex-direction column
	align-items center

.delivery-methods__list
	display flex
	justify-content center
	align-items flex-start
	margin-bottom 30px

.delivery-methods__item
	margin 0 100px
	display flex
	flex-direction column
	align-items center
	text-align center
	
.delivery-methods__title
	color blue
	margin-bottom 30px
	
.delivery-methods__icon
	margin-bottom 15px
	width 100%
	max-width 64px
	min-height 64px
	display flex
	justify-content center
	align-items flex-end

.delivery-methods__img
	width auto
	max-width 64px

.delivery-methods__item-title
	font-size largeText
	font-family mainTextFont
	color gray
	line-height 1.2
	
.delivery-methods__description
	width 100%
	text-align left
	font-size mediumText
	font-family mainTextFont
	color lightGray
	margin-bottom 25px

.payment-methods
	padding 40px 70px
	background-color white
	display flex
	flex-direction column
	align-items center

.payment-methods__list
	display flex
	justify-content center
	padding-bottom 20px

.payment-methods__item
	width 50%
	margin-right 150px
	display flex
	flex-direction column
	&:last-child
		margin-right 0
		
.payment-methods__item-top
	display flex
	align-items flex-end
	margin-bottom 25px

.payment-methods__icon
	min-height 71px
	display flex
	justify-content center
	align-items flex-end
	margin-right 35px

.payment-methods__img
	width auto
	max-width 100%
			
.payment-methods__item-title
	margin-bottom 10px
	font-size largeText
	font-family mainTextFont
	color gray
	
.payment-methods__item-bottom
	width 100%
	
.payment-methods__description
	font-size smallText
	font-family mainTextFont
	color gray
	text-align left
	
.payment-description
	padding 20px 0 20px 0 
	background-color white
	margin-bottom 30px
	
.payment-description__text
	font-size mediumText
	font-family mainTextFont
	color lightGray