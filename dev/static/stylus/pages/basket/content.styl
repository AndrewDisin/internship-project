.content_basket
	&:after
		content ''
		position absolute
		bottom 0px
		left 0px
		width 1920px
		height 910px
		background-image url('../img/general/basket/basket-bg.png')
		z-index -1	
	.container
		display flex
		flex-direction column
		padding 0
		align-items flex-start
	
.bread-crumbs__link_lilac-text
	color lilac
		
.content__title
	width 100%
	color blue
	margin-bottom 40px
	text-align center
	
.content__info
	width 100%
	display flex
	justify-content center
	
.content__form
	display flex
	flex-direction column
	align-items center
	margin-right 15px
	width 100%
	max-width 385px 

.content__label
	width 100%
	margin-bottom 20px

.content__select
	width 100%
	padding 10px 15px
	border-radius 5px
	border 2px solid violet
	font-size mediumText
	font-family mainTextFont
	background-color white
	color lightGray


.content__input
	width 100%
	margin-bottom 20px
	padding 10px 15px
	border-radius 5px
	border 2px solid violet
	font-size mediumText
	font-family mainTextFont
	color lightGray

.content__button
	max-width 275px
	border none
	background-color lightBlue
	color white
	margin-top 75px
	border-radius 5px
	padding 10px
	cursor pointer

.basket-items
	width 100%
	max-width 610px
	display flex
	flex-direction column
	align-items center

.basket__list
	width 100%
	max-width 610px
	display flex
	flex-direction column
	margin-left 15px
	
.basket-item
	width 100%
	display flex
	background-color lightYellow
	padding 15px 40px
	margin-bottom 20px
	align-items center
	border-radius 5px
	
.basket-item__picture
	width 100%
	max-width 160px
	margin-right 30px

.basket-item__img
	width auto
	max-width 100%
		
.basket-item__right
	display flex
	flex-direction column
	width 100%
	
.basket-item__title
	font-size largeText
	font-family mainTextFont
	color lightGray
	margin-bottom 15px
	
.basket-item__price
	font-size largeText
	font-family mainTextFont
	color pink

.basket-item__calc
	padding-top 5px
	margin-bottom 15px
	display flex
	align-items center
	
.basket-item__calc, .basket-item__description
	font-size mediumText
	font-family mainTextFont
	color lightGray
	
.basket-item__label
	position relative
	margin-right 15px
	&:before
		content ''
		position absolute
		right 1px
		top 1px
		width 39px
		height calc(50% - 1px)
		background-color white
		border-radius 0 5px 0 0 
		border-left 1px solid violet 
		border-bottom 1px solid violet 
		background-image url('../img/general/basket/arrow-up.png')
		background-position center center
		background-repeat no-repeat
	&:after
		content ''
		position absolute
		right 1px
		bottom 1px
		width 39px
		height calc(50% - 1px)
		background-color white
		border-radius 0 0 5px 0 
		border-left 1px solid violet 
		background-image url('../img/general/basket/arrow-down.png')
		background-position center center
		background-repeat no-repeat

.basket-item__input
		text-align center
		width 100%
		max-width 90px
		margin-left 15px
		padding 10px 45px 10px 5px
		border-radius 5px
		border 1px solid violet
		color lightGray
		font-size mediumText
		font-family mainTextFont
		

.basket-item__right-price
	display flex
	padding 20px 0 20px
	align-items flex-end
	border-top 1px solid yellow
	
input[type=number]::-webkit-inner-spin-button, input[type=number]::-webkit-outer-spin-button
	-webkit-appearance none 
	margin 0

.basket-item__description
	margin-right 60px

.order-button
	margin-top 30px
	margin-bottom 90px
	display block
	width 100%
	max-width 275px
	padding 15px
	font-size largeText
	font-family mainTextFont
	color white
	text-align center
	border none
	background-color orange
	border-radius 5px
	cursor pointer
		