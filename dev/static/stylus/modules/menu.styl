.bold
	font-size 24px
	position relative
	bottom -2px
	line-height 18px

.menu
	width 100%
	max-width 1920px
	margin 0 auto
	background-color #ffda39
	z-index 3

.menu__container
	width 100%
	max-width 1200px
	padding 0 15px
	margin 0 auto
	
.nav
	width 100%
	
.nav__nav-list
	display flex

.list-item_active-page
	a
		&:before
				display block
	
.list-item
	-moz-transition all 0.2s ease-in-out
	-o-transition all 0.2s ease-in-out
	-webkit-transition all 0.2s ease-in-out
	transition all 0.2s ease-in-out
	&:hover
		a
			&:before
				display block
	flex-grow 1
	
.list-item__link
	position relative
	display block
	padding 15px 10px
	color #fff
	font-size 18px
	font-family CenturyGothicBold, sans-serif
	height 100%
	&:first-child
		padding-right 13.6px
	&:hover
		&:before
			display block
			
	&:before
		display none
		content ''
		position absolute
		bottom 0
		left 0
		transform translateY(100%)
		width 100%
		height 10px
		z-index 2
		-webkit-clip-path polygon(100% 0, 100% 100%, 50% 0, 0 100%, 0 0)
		clip-path polygon(100% 0, 100% 100%, 50% 0, 0 100%, 0 0)

.list-item__link_blue
	background-color #70caf0
	&:before
		background-color #70caf0

.list-item__link_broun
	background-color #e78761
	&:before
		background-color #e78761
	
.list-item__link_pink
	background-color #f893bb
	&:before
		background-color #f893bb
	
.list-item__link_red
	background-color #e45c5c
	&:before
		background-color #e45c5c
	
.list-item__link_yellow
	background-color #ffda39
	&:before
		background-color #ffda39
	
.list-item__link_violet
	background-color #dbc4e1
	&:before
		background-color #dbc4e1
	
.list-item__link_lilac
	background-color #ff579a
	&:before
		background-color #ff579a
	
.mobile-menu
	position relative
	display none
	justify-content space-between
	align-items center
	
.mobile-menu__list
	background-color #e78761
	padding 30px 20px 20px 20px 
	position absolute
	display none
	flex-direction column
	bottom 5px
	left 5px
	transform translateY(100%)
	min-width 280px
	z-index 10
	-webkit-clip-path polygon(100% 10px, 100% 100%, 0 100%, 0 10px, 2% 10px, 5.5% 0, 9% 10px)
	clip-path polygon(100% 10px, 100% 100%, 0 100%, 0 10px, 2% 10px, 5.5% 0, 9% 10px)

.mobile-menu__list.active-popup
	display flex

.m-list-item
	width 100%
	
.m-list-item__link
	display block
	padding 10px
	color #fff
	font-size 18px
	font-family CenturyGothicBold, sans-serif
	&:hover
		text-decoration underline
		
.m-icon
	cursor pointer
	width 100%
	max-width 44px
	padding 10px
	
.icon__img
	width auto
	max-width 100%
		
.search__input
	background-color #fff
	border-color #ff6500

.basket__link
	color #ff6500
	border-color #ff6500

.list-item_heart a
	padding-right 30px
	
.list-item_heart
	a
		padding-right 100px
	position relative
	&:before
		content ''
		position absolute
		top 50%
		right 8px
		transform translateY(-50%)
		width 18px
		height 17px
		background-image url('../../../static/img/general/b-heart.png')
		z-index 1
	
