.bold
	font-size largeText
	position relative
	bottom -2px
	line-height 18px

.menu
	width 100%
	// max-width max-width-page
	margin 0 auto
	background-color yellow
	z-index 3

.menu__container
	width 100%
	max-width max-width-container
	padding 0 15px
	margin 0 auto
	
.nav
	width 100%
	
.nav__list
	display flex

.nav__list-item_active-page
	a
		&:before
				display block
	
.nav__list-item
	-moz-transition all 0.2s ease-in-out
	-o-transition all 0.2s ease-in-out
	-webkit-transition all 0.2s ease-in-out
	transition all 0.2s ease-in-out
	&:hover
		a
			&:before
				display block
	flex-grow 1
	
.nav__list-item-link
	position relative
	display block
	padding 15px 10px
	color white
	font-size largeText
	font-family CenturyGothicBold, sans-serif
	height 100%
	&:first-child
		padding-right 13.6px
	&:hover
		&:before
			display block
			
	&:before
		display none
		content ''
		position absolute
		bottom 0
		left 0
		transform translateY(100%)
		width 100%
		height 10px
		z-index 2
		-webkit-clip-path polygon(100% 0, 100% 100%, 50% 0, 0 100%, 0 0)
		clip-path polygon(100% 0, 100% 100%, 50% 0, 0 100%, 0 0)

.nav__list-item-link_blue
	background-color lightBlue
	&:before
		background-color lightBlue

.nav__list-item-link_broun
	background-color broun
	&:before
		background-color broun
	
.nav__list-item-link_pink
	background-color lightPink
	&:before
		background-color lightPink
	
.nav__list-item-link_red
	background-color red
	&:before
		background-color red
	
.nav__list-item-link_yellow
	background-color yellow
	&:before
		background-color yellow
	
.nav__list-item-link_violet
	background-color violet
	&:before
		background-color violet
	
.nav__list-item-link_lilac
	background-color lilac
	&:before
		background-color lilac
	
.mobile-menu
	position relative
	display none
	justify-content space-between
	align-items center
	
.mobile-menu__list
	background-color broun
	padding 30px 20px 20px 20px 
	position absolute
	display none
	flex-direction column
	bottom 5px
	left 5px
	transform translateY(100%)
	min-width 280px
	z-index 10
	-webkit-clip-path polygon(100% 10px, 100% 100%, 0 100%, 0 10px, 2% 10px, 5.5% 0, 9% 10px)
	clip-path polygon(100% 10px, 100% 100%, 0 100%, 0 10px, 2% 10px, 5.5% 0, 9% 10px)

.mobile-menu__list.active-popup
	display flex

.m-list-item
	width 100%
	
.m-list-item__link
	display block
	padding 10px
	color white
	font-size largeText
	font-family CenturyGothicBold, sans-serif
	&:hover
		text-decoration underline
		
.m-icon
	cursor pointer
	width 100%
	max-width 44px
	padding 10px
	
.icon__img
	width auto
	max-width 100%
		
.search__input
	background-color white
	border-color orange

.basket__link
	color orange
	border-color orange

.nav__list-item_heart a
	padding-right 30px
	
.nav__list-item_heart
	a
		padding-right 100px
	position relative
	&:before
		content ''
		position absolute
		top 50%
		right 8px
		transform translateY(-50%)
		width 18px
		height 17px
		background-image url('../img/general/b-heart.png')
		z-index 1
	
