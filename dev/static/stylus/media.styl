@media (max-width 1900px)
	.content.blog:after
		display none

@media (max-width xxl)
	.basket__count
		&:before
			width 120px
			background-repeat no-repeat
			background-position center
			background-size contain
			
@media (max-width xl)
	.main-header
		background-image none
	.logo
		font-size 50px
		margin-right 0
	.tagline
		font-size 25px
		margin-right 0
	.phones__phone
		font-size 12px
	.work-time__time
		font-size 14px
	.login__link
		font-size 14px
	.basket__link
		font-size 14px
	.main-header__bottom
		justify-content space-between
	.nav__list-item-link
		font-size 14px
	.nav-list-item-link_bold 
		font-size 14px
		line-height 14px
		bottom 0
	.main-banner__form
		right 50%
		transform translateX(50%)
		bottom 70px
	.about__content
		flex-wrap wrap
		justify-content center
	.about-person
		margin-right 0
		max-width 60%
	.video
		height 360px
	.footer-menu
		display none
	
	.blog__greeting--text
		padding 20px 80px 20px 20px
		
	.blog__newcomment__form label input, .blog__newcomment__form label textarea 
		margin-left 0
		
	.blog__newcomment__form label
		justify-content space-between
		
@media (max-width 1190px)
	.catalog__list__item:nth-child(1)
		margin-left 15px
	.catalog__list__item:nth-child(3)
		margin-right 15px
	.packaging__list__item:nth-child(2)
		margin-right 15px
	.packaging__list__item:nth-child(1)
		margin-left 15px
	.main-header .container:before
		display none
	

@media (max-width 1130px)
	.blog__newcomment__form label
		flex-direction column
	.blog__newcomment__form label input, .blog__newcomment__form label textarea 
		margin-top 5px
		max-width 100%
	.blog__newcomment__form .new-comment-submit
		margin-left 0



@media (max-width 1100px)
	.basket__info__form .basket-form-submit
		margin-top 20px
	.basket__info
		flex-direction column
		align-items center
	.basket__order-btn
		margin-bottom 30px

@media (max-width lg)
	.product-item
		max-width 33.3%
	.goods-item
		max-width 33.3%
	.goods-item__title
		font-size tinyText
	.nav
		display none
	.mobile-menu
		display flex
	.content.basket .container
		padding 0 15px
	.basket__list
		margin-left 0
	
	.slider-item__img
		height 350px
		width auto
		margin 0 auto
	
	.tagline
		display none

	.basket__count
		margin-right 0
		padding 5px
		&:before
			display none
	
	.main-header__bottom
		display none
		
	.basket
		margin-bottom 0
		
	.footer-logo
		font-size 55px
		width auto
		margin-bottom 30px
		
	.subscription
		align-items flex-start
	
	.footer-logo:before
		width 100%
		background-size cover
	
	.subscription__title
		font-size 16px
		margin-bottom 10px
	
	.subscription__descr
		font-size 10px
		
	.footer-phones__item
		font-size 18px
	
	.footer-contacts
		align-items flex-end
	
	.footer-social__title
		font-size 18px
		
	.payment-methods__list
		flex-wrap wrap
		
	.payment-methods__list--item
		margin-right 0
		width 100%
		align-items center
		text-align center
		margin-bottom 40px
		&:last-child
			margin-bottom 0
	
	.content.delivery
		&:after
			display none
	
	.delivery-methods__list--item
		margin-right 20px
		margin-left 20px
	
	.delivery-methods__list--item--title
		font-size 14px
	
	.login
		align-self center
	
	.blog-header--logo
		font-size 50px
		
	.social-contacts--item
		width 100%
		
	.social-contacts
		margin-right 0
		justify-content center
		text-align center
	
	.social-contacts
		margin-bottom 30px
	
	
		

	
@media (max-width md)
	.work-time__descr
		display none
	.work-time
		margin-bottom 5px
		align-self center
		&:before
			left 0px
			
		
	.work-time__time
		font-size 9.5px
		text-align center
	
	.logo
		font-size 40px
		
	.search__input
		width 100%
		max-width 300px
	
	.basket__link
		display none
		
	.main-header
		padding 20px 0
	
	.video__iframe, .video, .about-production
		max-width 100%
		min-width 100%
		width 100%
	
	.about-person
		max-width 100%
	
	.payment-methods
		padding 20px
	
	.blog__greeting--photo
		max-width 130px
	
	.blog__greeting--text
		padding-right 70px
		font-size 14px
		
	.basket__list__item
		flex-direction column
		align-items center
		text-align center
		width auto
		max-width 100%
	.basket__list__item__right
		margin-top 10px
		align-items center
	.basket__list__item__right--price
		text-align left
	.basket__list__item__right__price
		justify-content space-between
		
	.basket__list__item--img
		margin-right 0
		
	.basket__list__item__right__calc
		flex-wrap wrap
		justify-content center
		
	.basket__list__item__right__calc--descr
		margin-top 15px

	
		

		
@media (max-width 600px)
	.footer-top .container
		flex-wrap wrap

	.subscription
		width 100%
		max-width 100%
		margin 0
		margin-bottom 20px
		align-items center
	
	.footer-form
		justify-content center
	
	.footer-contacts
		width 100%
		max-width 100%
		align-items center
	
	.blog-header
		&:after
			display none

	.blog-header--logo
		font-size 40px
	
	.blog-header__login a
		font-size 14px
	
	.blog__greeting
		margin-bottom 30px

