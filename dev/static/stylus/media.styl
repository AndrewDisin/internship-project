@media (max-width xxl)
	.basket__count
		&:before
			width 120px
			background-repeat no-repeat
			background-position center
			background-size contain
			
@media (max-width xl)
	.content_blog:after
		display none
	.main-header
		background-image none
	.logo
		font-size 50px
		margin-right 0
	.tagline
		font-size 25px
		margin-right 0
	.phones__phone
		font-size 12px
	.work-time__time
		font-size 14px
	.login__link
		font-size 14px
	.basket__link
		font-size 14px
	.main-header__bottom
		justify-content space-between
	.nav__list-item-link
		font-size 14px
	.nav-list-item-link_bold 
		font-size 14px
		line-height 14px
		bottom 0
	.main-banner__form
		right 50%
		transform translateX(50%)
		bottom 70px
	.about__content
		flex-wrap wrap
		justify-content center
	.about-person
		margin-right 0
		max-width 60%
	.video
		height 360px
	.footer-menu
		display none
	
	.greeting__text
		padding 20px 80px 20px 20px
		
	.newcomment__input-name, .newcomment__input-message
		margin-left 0
		
	.newcomment__label
		justify-content space-between
		
@media (max-width 1190px)
	.main-header .container:before
		display none
	

@media (max-width 1130px)
	.newcomment__label
		flex-direction column
	.newcomment__input-name, .newcomment__input-message
		margin-top 5px
		max-width 100%
	.newcomment__button
