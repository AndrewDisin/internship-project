@media (max-width xxl)
	.basket__count
		&:before
			width 120px
			background-repeat no-repeat
			background-position center
			background-size contain
			
@media (max-width xl)
	.content
		&_blog:after
			display none
	.main-header
		background-image none
		&__bottom
			justify-content space-between
	.logo
		font-size 50px
		margin-right 0
	.tagline
		font-size 25px
		margin-right 0
	.phones__phone
		font-size 12px
	.work-time__time
		font-size 14px
	.login__link
		font-size 14px
	.basket__link
		font-size 14px
	.nav__list-item-link
		font-size 14px
		&_bold 
			font-size 14px
			line-height 14px
			bottom 0
	.main-banner__form
		right 50%
		transform translateX(50%)
		bottom 70px
	.about__content
		flex-wrap wrap
		justify-content center
	.about-person
		margin-right 0
		max-width 60%
	.video
		height 360px
	.footer-menu
		display none
	.greeting__text
		padding 20px 80px 20px 20px
	.newcomment
		&__input-name, &__input-message
			margin-left 0
		&__label
			justify-content space-between
		
@media (max-width 1190px)
	.main-header 
		.container:before
			display none
	

@media (max-width 1130px)
	.newcomment
		&__label
			flex-direction column
		&__input-name, &__input-message
			margin-top 5px
			max-width 100%
		&__button
			margin-left 0



@media (max-width 1100px)
	.basket__info__form .basket-form-submit
		margin-top 20px
	.basket__info
		flex-direction column
		align-items center
	.basket__order-btn
		margin-bottom 30px

@media (max-width lg)
	.goods-item
		max-width 33.3%
		&_packaging
			max-width 50%
		&__title
			font-size tinyText
	.product-item
		max-width 33.3%
	.nav
		display none
	.mobile-menu
		display flex
	.content.basket .container
		padding 0 15px
	.basket__list
		margin-left 0
	.slider-item__img
		height 350px
		width auto
		margin 0 auto
	.tagline
		display none
	.basket__count
		margin-right 0
		padding 5px
		&:before
			display none
	.main-header__bottom
		display none
	.basket
		margin-bottom 0
	.footer-logo
		font-size 55px
		width auto
		margin-bottom 30px
		&:before
			width 100%
			background-size cover
	.subscription
		align-items flex-start
		&__title
			font-size 16px
			margin-bottom 10px
		&__descr
			font-size 10px
	.footer-phones
		&__item
			font-size 18px
	.footer-contacts
		align-items flex-end
	.footer-social
		&__title
			font-size 18px
	.payment-methods
		&__list
			flex-wrap wrap
		&__item
			margin-right 0
			width 100%
			align-items center
			text-align center
			margin-bottom 40px
			&:last-child
				margin-bottom 0
	.content_delivery
		&:after
			display none
	.delivery-methods
		&__item
			margin-right 20px
			margin-left 20px
		&__title
			font-size 14px
	.login
		align-self center	
	.social-contacts
		margin-right 0
		margin-bottom 30px
		justify-content center
		text-align center
		&__link
			width 100%
	
	
@media (max-width md)
	.work-time
		margin-bottom 5px
		align-self center
		&:before
			left 0px
		&__descr
			display none
		&__time
			font-size 9.5px
			text-align center
	.logo
		font-size 40px
	.search__input
		width 100%
		max-width 300px
	.basket__link
		display none
	.main-header
		padding 20px 0
	.video__iframe, .video, .about-production
		max-width 100%
		min-width 100%
		width 100%
	.about-person
		max-width 100%
	.payment-methods
		padding 20px
	.greeting
		&__photo
			max-width 130px
		&__text
			padding-right 70px
			font-size 14px
	.basket__list__item
		flex-direction column
		align-items center
		text-align center
		width auto
		max-width 100%
	.basket__list__item__right
		margin-top 10px
		align-items center
	.basket__list__item__right--price
		text-align left
	.basket__list__item__right__price
		justify-content space-between
	.basket__list__item--img
		margin-right 0
	.basket__list__item__right__calc
		flex-wrap wrap
		justify-content center
	.basket__list__item__right__calc--descr
		margin-top 15px


@media (max-width 600px)
	.subscription
		width 100%
		max-width 100%
		margin 0
		margin-bottom 20px
		align-items center
	.footer-top
		.container
			flex-wrap wrap
	.footer-form
		justify-content center
	.footer-contacts
		width 100%
		max-width 100%
		align-items center
	.blog-header
		&:after
			display none
	.greeting
		margin-bottom 30px

@media (max-width sm)
	.goods-item_packaging
		max-width 100%
	.product-item
		max-width 50%
	.goods-item
		max-width 50%
	.logo
		width 60%
		order 1
	.contacts
		order 3
		width 100%
		margin-top 20px
	.login
		display flex
		width 40%
		order 2
		justify-content flex-end
		padding-left 0
		&:before
			left calc(100% - 80px)
	.main-header__top
		flex-wrap wrap
		align-items center
	.basket:before
		left 10px
	.payment-methods
		&__item-title
			font-size 12px
		&__description
			font-size 12px
		&__item-top
			margin-bottom 20px
		&__item
			margin-bottom 30px
	.after-registration__title, .delivery-methods__title, .payment-methods__title
		font-size 26px
	.after-registration
		&__item
			font-size 14px
	.delivery-methods
		&__list
			flex-wrap wrap
		&__description
			font-size 12px
	.payment-description
		padding 20px 0
		&__text
			font-size 14px
	.color-social-item
		margin-right 5px
		width 100%
		max-width 21px
		&__link
			width 100%
		&__img
			width auto
			max-width 100%
	.greeting__text
		font-size 11px
	.news-post
		margin-bottom 30px
		&__title
			font-size 18px
		&__date
			font-size 11px
			margin-right 30px
		&__coments
			font-size 11px
	.post-text
		font-size 12px
	.post-img
		margin-top 10px
		margin-bottom 20px
	.post-text
		p
			margin-bottom 5px
	.comments
		&__title
			font-size 18px
		&__options
			justify-content center
	.comment
		padding 20px 10px
		&__date
			font-size 12px	
		&__text
			font-size 12px
		&__link
			font-size 14px
	.newcomment
		padding 20px
		&__title
			width 100%
			text-align center
		&__form
			align-items center
		
@media(max-width 320px)
	.product-item
		max-width 100%
	.goods-item
		max-width 100%

	
