@import 'fonts.styl'
@import 'vars.styl'
@import 'libs.styl'
@import 'mixins.styl'

html
	line-height 1
	font-size 16px


body
	font-family mainFont


h1,h2,h3,h4,h5,h6
	margin 0


ul,li
	margin 0
	padding 0
	list-style-type none

p
	margin 0

a
	text-decoration none
	color black

audio,
canvas,
iframe,
img,
svg,
video
	vertical-align middle


textarea
	resize none


section
	position relative


input,
select,
button
	outline none


*, *:before, *:after
	box-sizing border-box


.container
	width 100%
	max-width 1200px
	padding 0 15px
	margin 0 auto
	
.back-call-popup, .login-popup
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	background-color rgba(0,0,0,.8)
	overflow auto
	display none
	justify-content center
	align-items center
	z-index 20

.back-call-popup__container, .login-popup__container
	position relative
	padding 55px 50px 65px 55px
	background-color #fff
	-webkit-box-shadow 0px 3px 87px 0px rgba(255,87,154,0.41)
	-moz-box-shadow 0px 3px 87px 0px rgba(255,87,154,0.41)
	box-shadow 0px 3px 87px 0px rgba(255,87,154,0.41);
	border-radius 3px
	background-image url('../../static/img/general/popup-bg-girl.png')
	background-repeat no-repeat
	background-position bottom right

.close-form-btn
	position absolute
	padding 10px
	top 5px
	right 5px
	width 100%
	max-width 32px
	img
		width auto
		max-width 100%
	
.backcall-form
	display flex
	flex-direction column
	align-items center
	input
		width 100%
		background-color #fff
		border-radius 5px
		border 2px solid #ff6c00
		padding 13px 20px 15px 20px
		margin-bottom 24px
		font-size 18px
		font-size CenturyGothicRegular, sans-serif
		color #7091f0
		&:last-child
			margin-bottom 0
		&::-webkit-input-placeholder
			color #7091f0
		&::-moz-placeholder
			color #7091f0
		&:-moz-placeholder
			color #7091f0
		&:-ms-input-placeholder
			color #7091f0
	.backcall-form--input-submit
		border none
		background-color #ff6c00
		color #fff
	
.backcall-form--title
	width 100%
	text-align center
	font-size 20px
	font-family CenturyGothicBold, sans-serif
	color #7091f0
	margin-bottom 35px

.active-popup
	display flex

.login-popup__container__tabs--item
	display none
	
.active
	display block

.login-popup__container__list--item.active-tab
	border-radius 5px
	background-color #7091f0
	a
		color #fff
		
.login-popup__container__list
	display flex
	justify-content space-between
	width 100%
	margin-bottom 23px

.login-popup__container__list--item
	margin-right 10px
	&:last-child
		margin-right 0
	a
		display block
		padding 10px
		font-size 20px
		font-family CenturyGothicBold, sans-serif
		color #7091f0
		border-radius 5px
		
.login-popup__container__tabs
	width 100%
	display flex
	flex-direction column
	justify-content center
	align-items center

.login-popup__container__tabs--item
	width 100%
	
.login-form, .registr-form
	width 100%
	display flex
	flex-direction column
	align-items center
	input
		width 100%
		background-color #fff
		border-radius 5px
		border 2px solid #ff6c00
		padding 13px 20px 15px 20px
		margin-bottom 24px
		font-size 18px
		font-size CenturyGothicRegular, sans-serif
		color #7091f0
		&::-webkit-input-placeholder
			color #7091f0
		&::-moz-placeholder
			color #7091f0
		&:-moz-placeholder
			color #7091f0
		&:-ms-input-placeholder
			color #7091f0
	.login-form--input-submit, .registr-form--input-submit
		border none
		background-color #ff6c00
		color #fff
		margin-bottom 30px
	.registr-form--input-submit
		margin-bottom 0
		margin-top 10px
		
	.forget-pass
		color #7091f0
		font-size 20px
		font-family CenturyGothicBold
		align-self flex-start
		
.checkbox
	display flex
	justify-content flex-start
	align-items center
	align-self flex-start
	width 100%
	margin-bottom 10px
	cursor pointer
	
	input[type="checkbox"]
		display none
		&:checked
			&~.custom-checkbox
				&:after
					background-color #ff6c00
			
		
.custom-checkbox
	position relative
	display block
	width 30px
	height 30px
	border 2px solid #ff6c00
	margin-right 10px
	border-radius 5px
	&:after
		content ''
		position absolute
		top 2px
		right 2px
		left 2px
		bottom 2px
		border-radius 5px
		transition all linear .1s

.checkbox-text
	font-size 12px
	font-family CenturyGothicBold
	color #7091f0
		

