	.container
		ul.content__bread-crumbs
			li.content__bread-crumbs--item
				a(href="#") Головна
			li.content__bread-crumbs--item.lilac-text
				a Кошик
		.basket--title Оформлення замовлення
		.basket__info
			.basket__info__form
				label(for="payment")
					select(name='payment' id='payment')
