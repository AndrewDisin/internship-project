						option Нова Пошта2
						option Нова Пошта3
				input(type="text" name='name' id='basket-form-name' placeholder="Ваше ім'я")
				input(type="text" name='family' id='basket-form-family' placeholder="Ваше прізвище")
				label(for="place")
					select(name='place' id='place')
						option Вибрати місто
						option Вибрати місто2
						option Вибрати місто3
				label(for="department")
					select(name='department' id='department')
