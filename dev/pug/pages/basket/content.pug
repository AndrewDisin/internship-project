									label(for="count").basket__list__item__right__calc--kil  Кількість
										input(type="number" name="count" id="count" placeholder="1")
									span.basket__list__item__right__calc--descr В наявності
								.basket__list__item__right__price
									.basket__list__item__right__price--descr До оплати
									.basket__list__item__right__price--cost 350 грн
					.basket__list__item
						.basket__list__item--img
